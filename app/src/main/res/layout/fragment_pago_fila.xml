<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#F1F1EC"
    app:contentPadding="10dp"
    app:cardElevation="10dp"
    android:layout_margin="10dp"
    android:id="@+id/CV_Pagos"
    app:cardCornerRadius="26dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="15dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="25dp">

            <TableRow>

                <TextView
                    android:id="@+id/TV_numero_pago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_span="2"
                    android:fontFamily="monospace"
                    android:text="pago numero"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#E61515"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.42"
                    app:layout_constraintStart_toStartOf="parent" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/TV_label_codigo_pago"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="180dp"
                    android:text="Codigo pago:"
                    android:textSize="15sp"
                    tools:layout_editor_absoluteX="8dp">

                </TextView>

                <TextView
                    android:id="@+id/TV_codigo_pago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="monospace"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.481"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.093" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/TV_label_codigo_contrato"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Numero de contrato:"
                    android:textSize="15sp"
                    tools:layout_editor_absoluteX="8dp">

                </TextView>

                <TextView
                    android:id="@+id/TV_codigo_contrato"
                    android:layout_width="165dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="monospace"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.512"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TV_numero_pago" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/TV_label_importe_pago"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Importe de pago:"
                    android:textSize="15sp"
                    tools:layout_editor_absoluteX="8dp">

                </TextView>

                <TextView
                    android:id="@+id/TV_importe_pago"
                    android:layout_width="165dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="monospace"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.512"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TV_fecha_pago" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/TV_label_fecha_pago"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Fecha de pago:"
                    android:textSize="15sp"
                    tools:layout_editor_absoluteX="8dp">

                </TextView>

                <TextView
                    android:id="@+id/TV_fecha_pago"
                    android:layout_width="165dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="monospace"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TV_codigo_contrato" />

            </TableRow>


        </TableLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>